“Everyone should learn how to program a computer because it teaches you how to think” —
Steve Jobs
const userBirthMonth = prompt("Enter your birth month:");

    function generateRandomFortune() {
      const fortunes = [
        "You will have a prosperous year!",
        "Love is in the air for you!",
        "Unexpected opportunities will come your way!",
        // Add more fortunes as needed
      ];
      const randomIndex = Math.floor(Math.random() * fortunes.length);
      return fortunes[randomIndex];
    }

    // Prompt the user for their birth month

    if (userBirthMonth) {
      const lowercaseMonth = userBirthMonth.toLowerCase();

      switch (lowercaseMonth) {
        case 'january':
        case 'february':
        case 'march':
        case 'april':
        case 'may':
        case 'june':
        case 'july':
        case 'august':
        case 'september':
        case 'october':
        case 'november':
        case 'december':
          console.log(`Your birth month: ${userBirthMonth}`);
          const fortune = generateRandomFortune();
          console.log(`Your fortune for ${userBirthMonth}: ${fortune}`);
          break;
        default:
          console.log('Invalid month entered. Please enter a valid month.');
      }
    } else {
      console.log('Invalid input. Please enter your birth month.');
    }
"Your birth month: may"
"Your fortune for may: Love is in the air for you!"
undefined
